{
    "name": "telegram-bot",
    "version": "0.0.1",
    "author": "WeKnowIt",
    "type": "module",
    "main": "index.mjs",
    "scripts": {
        "dev": "nodemon index.mjs",
        "build": "esbuild index.mjs --bundle --platform=node --outdir=assets",
        "prettier": "prettier --check \"**/*.mjs\"",
        "prettier:fix": "prettier --write \"**/*.mjs\""
    },
    "dependencies": {
        "ajv": "8.12.0",
        "dotenv": "16.0.3",
        "esbuild": "0.18.3",
        "mongodb": "5.2.0",
        "node-telegram-bot-api": "0.61.0",
        "nodemailer": "6.9.3",
        "open": "9.1.0"
    },
    "devDependencies": {
        "husky": "8.0.3",
        "nodemon": "2.0.22",
        "prettier": "2.8.7"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run prettier:fix"
        }
    }
}
